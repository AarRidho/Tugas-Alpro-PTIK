void tampildata(char *nm_td[], int *ni_td, int n){
	int i;
	garis('=',32);
	printf("%4s|%-21s|%5s","No.","Nama","Nilai\n");
	garis('=',32);
	for(i=0;i<n;i++){
		printf("%3d.| %-20s|%3d \n",i+1,nm_td[i],ni_td[i]);
	}
	garis('=',32);
}
