#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>

int jumlah=5;
char pilihMenuUtama();
void biodata();
void garis(char kar, int jum);
void statistika();
void isidata(int n, char *nm_id[], int ni_id[]);
void tampildata(char *nm_td[], int ni_td[],int n);

int main(){
	char pilih=0;
	pilih=pilihMenuUtama();
	if(pilih=='1'){
		biodata();
	}else if(pilih=='3'){
		statistika();
	}
}

void garis(char kar, int jum){
	int i;
	for(i=0;i<jum;i++){
		printf("%c",kar);
	}
	printf("\n");
}

char pilihMenuUtama(){
	char tpilih=0;
	system("cls");
	printf("Pilihan menu \n");
	printf("1. Menu 1 - BIODATA\n");
	printf("2. Menu 2 - PERHITUNGAN\n");
	printf("3. Menu 3 - STATISTIKA\n");
	printf("0. Exit \n");
	printf("Pilihan Anda : "); tpilih=getchar();
	return tpilih;
}

void biodata(){
	system("cls");
			printf("Anda memasuki lembar biodata\n");
			//>> tempat biodata
			garis('=',32);
				printf("Achmad Ahlar Ridha - 5235155571\n\n");
				printf("Febrianto Widyoutomo - 5235152263\n\n")
				printf("Ferdinand Louis\n\n")
				printf("Riza Maulana Halim\n\n")
				printf("Setya Achsanul Arief - 5235150721\n\n")
			garis('=',32);
			system("pause");
}

void statistika(){
	system("cls");
	int n;
	char c;
	char *nm_st[jumlah];
	int ni_st[jumlah];
	do{
		isidata(jumlah,nm_st,ni_st);
		tampildata(nm_st,ni_st,jumlah);
		printf("Masukan data baru?(Y/N): ");
		c = getch();
		system("cls");
	}while((c=='Y')||(c=='y'));
	if ((c!='N')||(c!='n')){
		printf("Maaf, Pilihan Anda salah\n");
	}
}

void isidata(int n, char *nm_id[], int *ni_id){
	int i;
	char tes[20]="";
	for(i=1;i<=n;i++){
		printf("Nama ke - %d: ",i);
		gets(tes);
		nm_id[i-1] = (char*)malloc(sizeof(char)*10);
		strcpy(nm_id[i-1],tes);
		printf("Nilai : ");scanf(" %d",&ni_id[i-1]);
		getchar();
	}
}
