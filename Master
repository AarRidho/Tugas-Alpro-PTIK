	return tpilih;
}

void kubus(int x){
	printf("Luas permukaan kubus\t: %dcm^2\n",x*x*6);
	printf("Volume kubus\t\t: %dcm^3\n",x*x*x);
}

void balok(int p, int l, int t){
	printf("luas permukaan balok\t: %dcm^2\n",2*(p*l+p*t+l*t));
	printf("volume balok\t\t: %dcm^3\n",p*l*t);
}
void statistika(){
	system("cls");
	int n;
	char c;
	char *nm_st[jumlah];
	int ni_st[jumlah];
	do{
		isidata(jumlah,nm_st,ni_st);
		tampildata(nm_st,ni_st,jumlah);
		printf("Masukan data baru?(Y/N): ");
		c = getch();
		system("cls");
	}while((c=='Y')||(c=='y'));
	if ((c!='N')||(c!='n')){
		printf("Maaf, Pilihan Anda salah\n");
	}
}

void isidata(int n, char *nm_id[], int *ni_id){
	int i;
	char tes[20]="";
	for(i=1;i<=n;i++){
		printf("Nama ke - %d: ",i);
		gets(tes);
		nm_id[i-1] = (char*)malloc(sizeof(char)*10);
		strcpy(nm_id[i-1],tes);
		printf("Nilai : ");scanf(" %d",&ni_id[i-1]);
		getchar();
	}
}
